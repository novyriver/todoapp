<h1>edit an exiting Todo</h1>

<h1>create a new Todo</h1>

<% if @todo.errors.any? %>
  <h2>The following errors prevented the todo from being saved</h2>
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

<% end %>
<%= form_for @todo do |f| %>
  <p> 
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <P>
    <%= f.submit %>
    
  </P>
<% end %>

<%= link_to "Back to todos listing", todos_path %>